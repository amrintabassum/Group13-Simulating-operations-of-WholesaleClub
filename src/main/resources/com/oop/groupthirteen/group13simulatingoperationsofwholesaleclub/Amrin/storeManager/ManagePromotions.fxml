<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oop.groupthirteen.group13simulatingoperationsofwholesaleclub.Amrin.storeManager.ManagePromotions">

    <children>
        <Text layoutX="171.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Manage Promotions">
            <font>
                <Font size="30.0"/>
            </font>
        </Text>

        <Button fx:id="backButton" layoutX="31.0" layoutY="16.0" mnemonicParsing="false" text="Back" onAction="#handleBack"/>

        <ComboBox fx:id="staffIdCombo" layoutX="64.0" layoutY="85.0" prefHeight="26.0" prefWidth="180.0"
                  promptText="Staff ID" onAction="#handleStaffSelection"/>

        <TextField fx:id="staffNameField" layoutX="299.0" layoutY="86.0" prefHeight="26.0" prefWidth="180.0"
                   promptText="Name of Staff" editable="false"/>

        <TextField fx:id="currentJobField" layoutX="64.0" layoutY="133.0" prefHeight="26.0" prefWidth="180.0"
                   promptText="Current Job Status" editable="false"/>

        <ComboBox fx:id="promotionCombo" layoutX="299.0" layoutY="133.0" prefHeight="26.0" prefWidth="180.0"
                  promptText="Job Promotion"/>

        <Button fx:id="promoteButton" layoutX="234.0" layoutY="181.0" mnemonicParsing="false" text="Promotion"
                onAction="#handlePromotion"/>

        <Label fx:id="promotionLabel" layoutX="129.0" layoutY="226.0" prefHeight="131.0" prefWidth="324.0"
               text="Promotion By Manager" wrapText="true"/>
    </children>
</AnchorPane>
