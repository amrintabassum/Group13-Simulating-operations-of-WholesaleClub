<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupthirteen.group13simulatingoperationsofwholesaleclub.Bashar.Cashier.registerCustomerController">

    <children>
        <Button fx:id="backButton" layoutX="284.0" layoutY="452.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="26.0" prefWidth="335.0" text="Back" />

        <TableView fx:id="customerTable" layoutX="14.0" layoutY="237.0" prefHeight="200.0" prefWidth="779.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="180.0" text="Name" />
                <TableColumn fx:id="numberColumn" prefWidth="150.0" text="Number" />
                <TableColumn fx:id="productColumn" prefWidth="290.0" text="Product" />
                <TableColumn fx:id="priceColumn" prefWidth="150.0" text="Price" />
            </columns>
        </TableView>

        <TextField fx:id="nameField" layoutX="14.0" layoutY="28.0" prefHeight="26.0" prefWidth="269.0" promptText="Name" />

        <TextField fx:id="numberField" layoutX="14.0" layoutY="81.0" prefHeight="26.0" prefWidth="269.0" promptText="Number" />

        <ComboBox fx:id="productComboBox" layoutX="14.0" layoutY="138.0" onAction="#handleProductSelection" prefHeight="26.0" prefWidth="269.0" promptText="Select Product" />

        <Button fx:id="addButton" layoutX="296.0" layoutY="140.0" mnemonicParsing="false" onAction="#handleAddProduct" text="+ADD" />

        <Button fx:id="saveButton" layoutX="296.0" layoutY="185.0" onAction="#handleSave" prefHeight="26.0" prefWidth="149.0" text="Save" />

        <Label fx:id="productLabel" layoutX="361.0" layoutY="9.0" prefHeight="170.0" prefWidth="433.0" style="-fx-font-weight: bold;" text="Added Product" wrapText="true" />

        <TextField fx:id="priceField" editable="false" layoutX="14.0" layoutY="185.0" prefHeight="26.0" prefWidth="269.0" promptText="Total Price" />
    </children>
</AnchorPane>
