<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oop.groupthirteen.group13simulatingoperationsofwholesaleclub.Bashar.accountOfficer.maintainEmployeePayrollController">

    <children>
        <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="500.0" prefWidth="800.0">
            <children>
                <TextField fx:id="employeeIdField" layoutX="44.0" layoutY="37.0" prefHeight="26.0" prefWidth="283.0" promptText="Employee ID"/>

                <TextField fx:id="employeeNameField" layoutX="45.0" layoutY="91.0" prefHeight="26.0" prefWidth="283.0" promptText="Name of Employee"/>

                <ComboBox fx:id="paymentTypeCombo" layoutX="384.0" layoutY="82.0" prefHeight="26.0" prefWidth="322.0"
                          promptText="Payment Type"/>

                <TextField fx:id="totalAmountField" layoutX="46.0" layoutY="147.0" prefHeight="26.0" prefWidth="283.0" promptText="Total Amount"/>

                <Button fx:id="payButton" layoutX="380.0" layoutY="131.0" mnemonicParsing="false"
                        prefHeight="26.0" prefWidth="331.0" text="Pay" onAction="#handlePay"/>

                <Button fx:id="backButton" layoutX="225.0" layoutY="457.0" mnemonicParsing="false"
                        prefHeight="26.0" prefWidth="331.0" text="Back" onAction="#handleBack"/>

                <TreeTableView fx:id="employeeTable" layoutX="30.0" layoutY="217.0" prefHeight="213.0" prefWidth="750.0">
                    <columns>
                        <TreeTableColumn fx:id="idColumn" prefWidth="123.0" text="Employee ID"/>
                        <TreeTableColumn fx:id="nameColumn" prefWidth="238.0" text="Name of Employee"/>
                        <TreeTableColumn fx:id="paymentColumn" prefWidth="205.0" text="Payment"/>
                        <TreeTableColumn fx:id="amountColumn" prefWidth="186.0" text="Total Amount"/>
                    </columns>
                </TreeTableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
