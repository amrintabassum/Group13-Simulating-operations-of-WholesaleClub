            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oop.groupthirteen.group13simulatingoperationsofwholesaleclub.Amrin.storeManager.approveStaffRoster">

    <children>
        <Text layoutX="166.0" layoutY="29.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Approve Staff Roster">
            <font>
                <Font size="30.0"/>
            </font>
        </Text>

        <Button fx:id="backButton" layoutX="27.0" layoutY="7.0" mnemonicParsing="false" text="Back" onAction="#handleBack"/>

        <TextField fx:id="staffIdField" layoutX="36.0" layoutY="66.0" prefHeight="26.0" prefWidth="186.0" promptText="Staff ID"/>
