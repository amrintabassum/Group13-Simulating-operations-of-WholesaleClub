            <columns>
                <TreeTableColumn fx:id="staffIdColumn" prefWidth="75.0" text="Staff ID"/>
                <TreeTableColumn fx:id="staffNameColumn" prefWidth="114.0" text="Name of Staff"/>
                <TreeTableColumn fx:id="validateColumn" prefWidth="131.0" text="Validate End"/>
                <TreeTableColumn fx:id="shiftColumn" prefWidth="115.0" text="Staff Shift"/>
                <TreeTableColumn fx:id="positionColumn" prefWidth="123.0" text="Job Position"/>
            </columns>
        </TreeTableView>
    </children>
</AnchorPane>
